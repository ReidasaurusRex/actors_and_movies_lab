<h1>Login</h1>
<% flash.each do |key, value| %>
  <% if key == "notice" %>
    <%= content_tag :div, value, class: "text_center alert alert-warning" %>
  <% elsif key == "alert" %>
    <%= content_tag :div, value, class: "text-center alert alert-danger" %>
  <% else %>
    <%= content_tag :div, value, class: "text-center alert alert-success" %>
  <% end %>
<% end %>

<%= form_tag(login_path) do %>

  <%= label_tag(:username) %>
  <%= text_field_tag(:username, params[:username], autofocus: true) %>

  <%= label_tag(:password) %>
  <%= password_field_tag(:password) %>

  <%= submit_tag("Log in", class: "btn btn-primary") %>

<% end %>


<%= link_to "Don't have an account? Sign up here", signup_path %>